<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/green"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="159dp"
        android:src="@drawable/green"
        app:layout_constraintTop_toBottomOf="@+id/button_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:minHeight="60dp"
        android:textColorHint="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="28dp"
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        app:layout_constraintTop_toBottomOf="@+id/reg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/green2"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:minHeight="60dp"
        android:textColorHint="@color/white"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="28dp"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/green2"
        app:layout_constraintTop_toBottomOf="@id/username"
        /><EditText
    android:id="@+id/password"
    android:minHeight="60dp"
    android:textColorHint="@color/white"
    android:layout_marginTop="3dp"
    android:layout_marginHorizontal="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
    android:background="@color/green2"
     android:textSize="20sp"
    android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/email"
        />
    <Button
        android:id="@+id/button_view"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:backgroundTint="@color/white"
        android:text="NEXT"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="28dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/button_view"
        app:layout_constraintEnd_toEndOf="@id/button_view"
        app:layout_constraintTop_toTopOf="@+id/button_view" />


    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>